{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Atypik House{% endblock %}

{% block body %}
{% include 'header.html.twig' %}

    <div class="container-fluid">
        <div class="row">

          {% include 'userinterface/tabs.html.twig' %}

            <div class="col mt-3 mb-3 p-5" style="background-color: white;">
                      {% include 'userinterface/profilehead.html.twig' %}
                    <div class="col-12">

                    <div class="col-12">
                        <hr>
                    </div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a class="text-dark" href="{{path('home')}}">Accueil</a></li>
                            <li class="breadcrumb-item"><a class="text-dark" href="{{path('internaute')}}">Mon Profil</a></li>
                          <li class="breadcrumb-item"><a class="text-dark" href="#">Modifier mon profil</a></li>
                        </ol>
                    </nav>
                        <div class="col-12 mt-3">
                            <div class="col-3" style="margin-left:80%;">
                                <button class="btn-atypik-house"><a href="{{path('internaute')}}">Voir mon Profil</a></button>

                            </div>
                        </div>
                        <div class="text-center col-12 p-5">
                            <h4>Modifier Mon Profil</h4>
                        </div>
                        {{ form_start(form) }}

                        <div class="row border border-dark">
                            <div class="col-12 mb-3 carte">
                                <div class=" d-block p-3 col-12 content">
                                    <div class="row g-3 mb-4 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Login: </label>
                                        </div>

                                        <div class="col-5 mb-3">
                                            {{ form_widget(form.login) }}
                                        </div>
                        
                                      </div>
                                    <div class="row g-3 mb-4 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Adresse mail: </label>
                                        </div>
                                        <div class="col-5 mb-3">
                                            {{ form_widget(form.email) }}
                                        </div>
                        
                                      </div>
                        
                                      <div class="row g-3 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Mot de Passe</label>
                                        </div>
                                        <div class="col-5 mb-3">
                                            {{ form_widget(form.password) }}
                                        </div>
                                      </div>
                                      <div class="row g-3 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Nom</label>
                                        </div>
                                        <div class="col-5 mb-3">
                                            {{ form_widget(form.nom) }}
                                        </div>
                                      </div>
                                      <div class="row g-3 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Prénom</label>
                                        </div>
                                        <div class="col-5 mb-3">
                                            {{ form_widget(form.prenom) }}
                                        </div>
                                      </div>
                                      <div class="row g-3 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Date de Naissance</label>
                                        </div>
                                        <div class="col-5 mb-3">
                                            {{ form_widget(form.dateNaissance) }}
                                        </div>
                                      </div>
                                      <div class="row g-3 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Adresse</label>
                                        </div>
                                        <div class="col-5 mb-3">
                                            {{ form_widget(form.adresse) }}
                                        </div>
                                      </div>
                                      <div class="row g-3 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Ville</label>
                                        </div>
                                        <div class="col-5 mb-3">
                                            {{ form_widget(form.ville) }}
                                        </div>
                        
                                      </div>    
                                      <div class="row g-3 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Code Postal</label>
                                        </div>
                                        <div class="col-5 mb-3 h-100">
                                            {{ form_widget(form.cp) }}
                                        </div>
                                        <div class="row g-3 align-items-center">
                                            <div class="col-2">
                                              <label for="inputPassword6" class="col-form-label">Genre</label>
                                            </div>
                                            <div class="col-5 mb-3 h-100">
                                                {{ form_widget(form.genre) }}
                                            </div>
                                        </div>
                        
                                    <div class="col-12 mt-3">
                                            <div class="col-3" style="margin-left:80%;">
                                        
                        
                                    </div>
                                    <div class="row g-3 align-items-center">
                                        <div class="col-2">
                                          <label for="inputPassword6" class="col-form-label">Téléphone</label>
                                        </div>
                                        <div class="col-5 mb-3 h-100">
                                            {{ form_widget(form.telephone) }}
                                        </div>
                                    </div>
                    
                                <div class="col-12 mt-3">
                                        <div class="col-3" style="margin-left:80%;">
                                    
                    
                                </div>
                                <div class="row g-3 align-items-center">
                                    <div class="col-2">
                                      <label for="inputPassword6" class="col-form-label">Photo de profil</label>
                                    </div>
                                    <div class="col-5 mb-3">
                                        {{ form_widget(form.url) }}
                                    </div>
                                  </div>
                                <div class="row g-3 align-items-center">
                                    <div class="col-2">
                                      <label for="inputPassword6" class="col-form-label">Biographie</label>
                                    </div>
                                    <div class="col-5 mb-3 h-100">
                                        {{ form_widget(form.biographie) }}
                                    </div>
                                </div>
                
                            <div class="col-12 mt-3">
                                    <div class="col-3" style="margin-left:80%;">
                                        {{ form_row(form.save, { 'label': 'Submit me' }) }}


                            </div>
                                    </div>
                        
                        
                        </div>                        </div>

                </div>
                <!-- Navigation Tabs-->
                {{ form_end(form) }}

            </div>

            
        </div>
    </div>
</div>

{% endblock %}
