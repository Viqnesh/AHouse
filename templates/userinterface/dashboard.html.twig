{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Atypik House{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
    <div class="container-fluid">
        <div class="row">

          {% include 'userinterface/tabs.html.twig' %}

            <div class="col mt-3 mb-3 p-5" style="background-color: white;">
                      {% include 'userinterface/profilehead.html.twig' %}
                <div class="container">
                    <div class="col-12">
                        <hr>
                    </div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                          <li class="breadcrumb-item"><a class="text-dark" href="{{path('home')}}">Accueil</a></li>
                          <li class="breadcrumb-item"><a class="text-dark" href="{{path('internaute')}}">Mon Profil</a></li>
                        </ol>
                    </nav>
                    <div class="col-12 mt-3">
                        <div class="col-3" style="margin-left:80%;">

                        </div>
                    </div>
                        <div class="text-center col-12 p-5">
                            <h3>Informations Générales</h3>
                        </div>
                        <div class="col-12 p-5 ml-5 border border-dark">
                            <div class="container">
                                <div class="row">
                                    <table class="table">
                                        <tr>
                                            <td>Nom :</td>
                                            <td>{{profil.nom}}</td>
                                          </tr>
                                          <tr>
                                            <td>Prenom :</td>
                                            <td>{{profil.prenom}}</td>
                                          </tr>
                                          <tr>
                                            <td>Adresse mail :</td>
                                            <td>{{profil.email}}</td>
                                          </tr>
                                          <tr>
                                            <td>Date de Naissance :</td>
                                            <td>{{profil.dateNaissance|date('Y-m-d')}}</td>
                                          </tr>
                                          <tr>
                                            <td>Genre :</td>
                                            <td>{{profil.genre}}</td>
                                          </tr>
                                          <tr>
                                            <td>Adresse :</td>
                                            <td>{{profil.adresse}}</td>
                                          </tr>
                                          <tr>
                                            <td>Ville :</td>
                                            <td>{{profil.ville}}</td>
                                          </tr>
                                          <tr>
                                            <td>Téléphone :</td>
                                            <td>{{profil.telephone}}</td>
                                          </tr>
                                          <tr>
                                            <td>Photo de Profil :</td>
                                            <td><img src="{{asset('images/profils/'~ profil.url)}}" width="30%"></td>

                                          </tr>
                                          <tr>
                                            <td>Biographie :</td>
                                          </tr>
                                          <tr>
                                            <td>{{profil.biographie}}</td>
                                          </tr>
                                        </tbody>
                                      </table>
                                </div>

                                    </div>
                            </div>
                        </div>


                </div>
                <!-- Navigation Tabs-->

            </div>
        </div>
    </div>
{% include 'footer.html.twig' %}

{% endblock %}
