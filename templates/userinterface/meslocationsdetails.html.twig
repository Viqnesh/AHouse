{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Atypik House{% endblock %}

{% block body %}
{% include 'header.html.twig' %}

    <div class="container-fluid">
        <div class="row">

          {% include 'userinterface/tabs.html.twig' %}

            <div class="col mt-3 mb-3 p-5" style="background-color: white;">
                      {% include 'userinterface/profilehead.html.twig' %}
                    <div class="col-12">
                    </div>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="text-dark" href="{{path('home')}}">Accueil</a></li>
                        <li class="breadcrumb-item"><a class="text-dark" href="{{path('internaute')}}">Mon Profil</a></li>
                      <li class="breadcrumb-item"><a class="text-dark" href="{{path('internaute_location')}}">Historique des Locations</a></li>
                      <li class="breadcrumb-item"><a class="text-dark" href="#">{{location.idHabitatIdLocation.nom}}</a></li>

                    </ol>
                        <div class="text-center col-12 p-5">
                            <h4>Détail de la Réservation n°{{location.idHabitatIdLocation.id}}</h4>
                        </div>
                        <div class="d-flex col-12 ml-5">
                            <h1 class="font-weight-700">{{location.idHabitatIdLocation.nom}}</h1>
                        </div>
                            <span class="lieu"><i class="pinIcon fa fa-map-marker" aria-hidden="true"></i>{{location.idHabitatIdLocation.pays}} , {{location.idHabitatIdLocation.ville}}</span>
    
                        <div class="row mt-4 mr-3">
                          <div class="col-7 text-justify design-shadow">
                              <h3 class="mb-3 title-location">Description</h3>
                            <p class="text-justify">{{location.idHabitatIdLocation.description}}</p>
                            <div class="d-inline-flex">
                            <div class="bloc-service">
                                <div class="icon">
                                    <span class="icon-price">
                                        <img src="{{asset('images/icons/euro.png')}}" width="100%">
                                    </span>
                                </div>
                                <div class="detail-icon">
                                    <div class="title-icon">
                                        {{location.idHabitatIdLocation.prix}} € / nuit
                                    </div>
                                </div>
    
                            </div>
                            <div class="bloc-service">
                                <div class="icon">
                                    <span class="icon-price">
                                        <img src="{{asset('images/icons/family.png')}}" width="100%">
    
                                    </span>
                                </div>
                                <div class="detail-icon">
                                    <div class="title-icon">
                                        {{location.idHabitatIdLocation.capacite}} Personnes
                                    </div>
                                </div>
    
                            </div>
                            <div class="bloc-service">
                                <div class="icon">
                                    <span class="icon-price">
                                        <img src="{{asset('images/icons/bed.png')}}" width="100%">
                                    </span>
                                </div>
                                <div class="detail-icon">
                                    <div class="title-icon">
                                        {{location.idHabitatIdLocation.nbCouchages}} Lits
                                    </div>
                                </div>
    
                            </div>
    
                            <div class="bloc-service">
                                <div class="icon">
                                    <span class="icon-price">
                                        <img style="filter: brightness(0) invert(1);" src="{{asset('images/icons/camping.png')}}" width="100%">
                                    </span>
                                </div>
                                <div class="detail-icon">
                                    <div class="title-icon">
                                        {{location.idHabitatIdLocation.idTypeHabitat.nom}}
                                    </div>
                                </div>
    
                            </div>
                            </div>
                          </div>
                          <div class="col-5">
                              <h3 class="mb-5 text-center title-location">Détails</h3>
                              <div class="container justify-content-center" style="text-align: -webkit-center;">
                                    <div class="row">
                                      <div class="col-12 justify-content-center">
                                        <div class="col-6 mb-4">
                                            Réservé le : {{location.dateReservation|date('Y-m-d')}}

                                        </div>
                                      </div>
                                      <div class="col-12 justify-content-center">
                                        <div class="col-6 mb-4">
                                            Date d'arrivée : {{location.dateDebut|date('Y-m-d')}}

                                        </div>
                                      </div>
                                      <div class="col-12 justify-content-center">
                                        <div class="col-6 mb-4">
                                            Date de départ : {{location.dateFin|date('Y-m-d')}}

                                        </div>
                                      </div>
                                      <div class="col-12 justify-content-center">
                                        <div class="col-6 mb-4">
                                            Réservé pour : {{location.nbPersonnes}} personne(s)

                                        </div>
                                      </div>
                                      <div class="col-12 justify-content-center">
                                        <div class="col-6 ">
                                            Prix  : {{location.idHabitatIdLocation.prix}} €

                                        </div>
                                      </div>
                                  </div>
                                </div>
    
                          </div>
                        <hr>
                        <div class="col-12 ml-5">
                            <div class="col-12 mb-2">
                                <h4 class="title-location">Les Activités à Proximité</h4>
                            </div>
                    
            <div class="d-flex">
                {% for activite in activites %}
                    <div class="col-3 m-3 border border-dark carte">
                        <img src="{{asset('images/activite/'~ activite.typeActivite.image)}}" width="100%">
                            <div class=" d-block p-3 col-12 content">
                                <h5 class="text-center mt-3">{{activite.typeActivite.nom}}</h5>
                                <p class="desc">
                                </p>
                                <hr>
                                <button class="btn-atypik-house" style="margin-left : 10% ;"><a href="{{path('habitat_activite' , { 'id': activite.id })}}" >Détails</a></button>
                            </div>
                    </div>
                {% endfor %}
            </div>
                          </div>
                        <hr>
                        <div class="col-12 ml-5">
                            <div class="col-12 mb-5">
                                <h4 class="title-location">Ajouter Un Commentaire</h4>
                            </div>
                            {{ form_start(form) }}
                            <div class="col-5 ">
                              <div class="row-3 mb-3 ml-4">
                                  <div class="col">
                                      Titre
                                  </div>
                                <div class="col align-items-center mt-3 mb-3">
                                    {{ form_widget(form.titre) }}
                                </div>
                                <div class="col-5">
                                </div>
                                <div class="row-3 mb-3">
                                    <div class="col-12 mb-3">
                                        Contenu
                                    </div>
                                    <div class="col align-items-center">
                                        {{ form_widget(form.contenu) }}
                                    </div>
                                    <div class="col align-items-center mt-5" style="margin-left : 5%;">
                                        {{ form_widget(form.rechercher) }}
                                    </div>

                                    <div class="col-12">
                                    </div>
                            </div>
                            {{ form_end(form) }}

                        </div>  

                        <hr>
                        <div class="col-12 ml-5">
                            {{ form_start(photo) }}
                            <div class="col-12 mb-5">

                                <h4 class="title-location">Ajouter une Photo</h4>
                            </div>
                            <div class="col align-items-center mt-3 mb-3">
                                {{ form_widget(photo.url) }}
                            </div>
                            <div class="col align-items-center mt-5" style="margin-left : 5%;">
                                {{ form_widget(photo.add) }}
                            </div>
                            {{ form_end(photo) }}
                        </div>
                
                
                    </div>
                <!-- Navigation Tabs-->

            </div>
        </div>
    </div>
</div>

{% endblock %}
