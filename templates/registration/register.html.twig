{% extends 'base.html.twig' %}

{% block title %}Inscription - Atypik House {% endblock %}

{% block body %}
{% include 'header.html.twig' %}

<div class="d-flex justify-content-center loginform">
<div class="container">
    <div class="row text-center">
        <h1 class="h3 titleAtypik">Inscription</h1>

        <div class="col-12 mt-1 text-center p-5">
        <form class="">
            <div class="row mb-3">
              <label for="inputEmail3" class="col-sm-3 col-form-label">{{ form_label(form.email, 'Votre adresse email :') }}
            </label>
              <div class="col-sm-5">
                {{ form_widget(form.email) }}
                <i style="margin-right :1%;" class="fas fa-info-circle mr-3"></i>{{ form_help(form.email) }}
                </div>
            </div>
            <div class="row mb-3">
              <label for="inputPassword3" class="col-sm-3 col-form-label">{{ form_label(form.password, 'Votre mot de passe :') }}</label>
              <div class="col-sm-5 text-left">
                {{ form_widget(form.password.first) }}
                <i style="margin-right :1%;" class="fas fa-info-circle mr-3"></i>{{ form_help(form.password) }}

              </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Confirmez votre mot de passe</label>
                <div class="col-sm-5">
                    {{ form_widget(form.password.second) }}
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Nom</label>
                <div class="col-sm-5">
                    {{ form_widget(form.nom) }}
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Pr√©nom</label>
                <div class="col-sm-5">
                    {{ form_widget(form.prenom) }}
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Sexe</label>
                <div class="col-sm-1">
                    {{ form_widget(form.genre) }}
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Adresse</label>
                <div class="col-sm-5">
                    {{ form_widget(form.adresse) }}
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Ville</label>
                <div class="col-sm-5">
                    {{ form_widget(form.ville) }}
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Code Postale</label>
                <div class="col-sm-5">
                    {{ form_widget(form.cp) }}
                </div>
              </div>

            <button type="submit" class="btn btn-primary">Je m'inscris</button>
          </form>
          </div>
        </div>
    </div>
</div>

{% endblock %}




