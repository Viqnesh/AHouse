{% extends 'internaute.html.twig' %}

{% block titre %} Dashboard {% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/responsive.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/ui.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('fonts/fontawesome/css/all.min.css')}}">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
<link rel="stylesheet" href="{{ asset('css/tooplate-style.css') }}" rel="stylesheet" />                                   <!-- Templatemo style -->

<link rel="stylesheet" src="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
{% endblock %}

{% block contenuPrincipal %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
    {% endfor %}

<section class="section-content padding-y" style="margin : 10% ;">
    <div class="container">
    <section class="content" style="margin-bottom: 10%;">

                        <div class="container">
                            <div class="heading">
                                <h3 class="section-title"></h3>
                            </div>
                            <h1>Mes Habitats</h1>

                            <table class="table table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Nom</th>
                                        <th>Couchages</th>
                                        <th>Capacite</th>
                                        <th>Prix</th>
                                        <th>Pays</th>
                                        <th>Ville</th>
                                        <th>Description</th>
                                        <th>Publication</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for habitat in habitats %}
                                    <tr>
                                        <td>{{ habitat.nom }}</td>
                                        <td>{{ habitat.nbCouchages }}</td>
                                        <td>{{ habitat.capacite }}</td>
                                        <td>{{ habitat.prix }}</td>
                                        <td>{{ habitat.pays }}</td>
                                        <td>{{ habitat.ville }}</td>
                                        <td>{{ habitat.description }}</td>
                                        <td>{{ habitat.datePublication ? habitat.datePublication|date('Y-m-d') : '' }}</td>
                                        <td>
                                            <a href="{{ path('habitat_show', {'id': habitat.id}) }}"><i class="fas fa-edit"></i></a>
                                            <a href="{{ path('habitat_edit', {'id': habitat.id}) }}"><i class="fas fa-info-circle"></i></a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="10">Aucun Habitat ajout√©</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <button type="button" class="btn btn-light"><a href="{{ path('habitat_new') }}">Ajouter un Habitat</a>
                            </button>
                        
                        

    
                    
                </div>
            </div>
    
        </section>




    </div> <!-- container .//  -->
</section>



{% endblock %}

{% block javascripts %}
        <script src="{{ asset('js/jquery-2.0.0.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>
{% endblock %}
