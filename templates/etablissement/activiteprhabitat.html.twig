{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Atypik House{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
<div class=" text-center rent-banner p-5" style="background-image:url({{asset('images/activite/'~ activite.typeActivite.image)}});filter:brightness(0.5);">
<h1 class="hero-title">{{activite.typeActivite.nom}}</h1>
                    <nav class="text-center" aria-label="breadcrumb ">
                        <ol class="breadcrumb" >
                          <li class="breadcrumb-item active" aria-current="page">Accueil</li>
                          <li class="breadcrumb-item active" aria-current="page">Les Domaines</li>
                          <li class="breadcrumb-item active" aria-current="page">{{habitat.nom}}</li>
                          <li class="breadcrumb-item active" aria-current="page">{{activite.typeActivite.nom}}</li>
                        </ol>
                      </nav>
</div>
<div class="d-flex rent-content">

    <div class="col-12 domaine-texture">
        <div class="col-12 p-5">
            <div class="container">
                <div class="row ">

                    <div class="col-md-12">
                    <div class="row" style="align-items:center;"> 
                      <div class="col-12 p-3 ">
                    <h1 class="text-center handwrite text-white">Description de l'Activité</h1>
                            <div class="row">
                            <div class="col-8 p-4">
                            <p class="text-justify text-white  p-3 mt-3">{{activite.typeActivite.description}}</p>
                        <div class="d-inline-flex">

                        </div>
                      <div class="col-12 m-1 p-3 ">

                      </div>
    
                    <div class="col-12 m-1 p-4">
                        <h4 class="text-white">Photos</h4>
                            <div class="col-6  d-flex p-3">
            <div class="container">
                <div class="row g-1">
                {% if photos is empty %}
                    <p class="text-white">Aucune photo n'a été publié pour cette activité</p>
                {% else %}
                <div class="row g-1">
                  {% for photo in photos %}
                  <div class="col-3">
                    <div class="p-1 border bg-light"><img src="{{asset(photo.url)}}" width="100%"></div>
                  </div>
                  {% endfor %}
                </div>
                {% endif %}

                </div>
              </div>
                            </div>                         
                    </div>  

    <div class="col-12 p-4 m-1">
            <div class="row">
                <h4 class="text-white">l'Avis de nos clients</h4>

            <div class="container">
                <div class="row p-3 m-1 g-2">
                  <div class="col-7 text-white p-3">
                    {% if comments is empty %} 
                    <p>Aucun commentaire à été publié pour cette activité</p>
                    {% else %}
                    <div class="p-3 border bg-light">
                        <div class="media">
                        {% for comment in comments %}
                        <div class="col">
                            <h5>{{comment.idUser.nom}} {{comment.idUser.prenom}}</h5>
                            <span class="appr">{{comment.titre}}</span>
                        </div>
                        </div>


                        <hr>
                        <p class="comment">
                            {{comment.contenu}}
                        </p>
                    </div>
                    {% endfor %}
                  </div>
                  {% endif %}
                </div>
              </div>
              
        </div>

    </div>
                            </div>


                            <div class="mt-2">
                            </div>               
                            </div>
                            </div>

                            </div>



                    </div>

                    </div>
                      </div>

                
                    </div>
        
                            
                    </div>








        </div>

    </div>

<div class="container">
    <div class="row">

        <div class="col-12">
            <h1 class="text-center handwrite mt-5 mb-5">Les Logements</h1>
            <div class="card-bg">
            <div class="col-7 mb-5  mx-auto carte shadow">

                    <div class"text-center">
                    </div>
                </div>

            </div>

            </div>

        </div>

    </div>
</div>
{% include 'footer.html.twig' %}


{% endblock %}
