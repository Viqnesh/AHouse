                                {{ form_widget(form.valeurPropriete) }}
                            </div>

                        </div>




                        </div>
                        <div class="mt-5 text-center">
                            {{ form_row(form.save, { 'label': 'Valider' }) }}
                        </div>
                        {{ form_end(form) }}

                </div>
                <!-- Navigation Tabs-->

            </div>
        </div>
    </div>
