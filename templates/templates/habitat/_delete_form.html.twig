<form method="post" action="{{ path('habitat_delete', {'id': habitat.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ habitat.id) }}">
    <button class="btn btn-info">Supprimer
    </button>
</form>
