{% extends 'internaute.html.twig' %}

{% block titre %} Dashboard {% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/responsive.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/ui.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('fonts/fontawesome/css/all.min.css')}}">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
<link rel="stylesheet" href="{{ asset('css/tooplate-style.css') }}" rel="stylesheet" />                                   <!-- Templatemo style -->

<link rel="stylesheet" src="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
{% endblock %}

{% block contenuPrincipal %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
{% include 'headerLogged.html.twig' %}
{% else %}
{% include 'header.html.twig' %}
{% endif %}

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop" >
    <div class="container">

        <nav>
        <ol class="breadcrumb text-white">
            <li class="breadcrumb-item"><a href="#">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Les Habitats</li>
        </ol>  
        </nav>
    </div> <!-- container //  -->
    </section>
    <!-- ========================= SECTION INTRO END// ========================= -->
    

<!-- ============================ COMPONENT 1 ================================= -->
{% for habitat in habitats %}

<div class="card" style="margin : 5%;">
	<div class="row no-gutters">
		<aside class="col-md-6">
<article class="gallery-wrap" > 
	<div class="img-big-wrap" style="width:80%;margin : 10% ;">
	   <a href="#"><img src="{{asset(habitat.url)}}" style="width: 100%;"></a>
	</div> <!-- img-big-wrap.// -->
</article> <!-- gallery-wrap .end// -->
		</aside>
		<main class="col-md-6 border-left">
<article class="content-body" style="background-image: url('{{asset('images/paper-texture.jpg')}}'); 
">

<h2 class="title">  {{ habitat.nom }} </h2>


<div class="mb-3"> 
	<var class="price h2"> {{ habitat.prix }} â‚¬ </var> 
	<span class="text-muted">/par nuit</span> 
</div> 

<p> {{ habitat.description }} </p>
<dl class="row" style="font-size : 15px ; font-weight :bold ;">
  <dt class="col-sm-3">Couchages</dt>
  <dd class="col-sm-9"> {{ habitat.nbCouchages }} </dd>

  <dt class="col-sm-3">Capacite</dt>
  <dd class="col-sm-9"> {{ habitat.capacite }} </dd>

  <dt class="col-sm-3">Adresse</dt>
  <dd class="col-sm-9"> {{ habitat.pays }} ,  {{ habitat.ville }} </dd>
</dl>

<hr>
	<div class="row">
		<div class="form-group col-md flex-grow-0">
			<div class="input-group mb-3 input-spinner">
			  <div class="input-group-prepend">
			  </div>
			  <div class="input-group-append">
			  </div>
			</div>
		</div> <!-- col.// -->

	</div> <!-- row.// -->
	<a href="{{path('product', {'id' : habitat.id})}}" class="btn btn-lg btn-starred btn-purple"> Voir Plus </a>
</article> <!-- product-info-aside .// -->
		</main> <!-- col.// -->
	</div> <!-- row.// -->
</div> <!-- card.// -->
{% endfor %}

<!-- ============================ COMPONENT 1 END .// ================================= -->
{% endblock %}

{% block javascripts %}
        <script src="{{ asset('js/jquery-2.0.0.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>
{% endblock %}

