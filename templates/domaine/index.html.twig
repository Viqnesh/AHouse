{% extends 'base.html.twig' %}

{% block title %}Domaine index{% endblock %}

{% block body %}
    <h1>Domaine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Arrive</th>
                <th>Depart</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for domaine in domaines %}
            <tr>
                <td>{{ domaine.id }}</td>
                <td>{{ domaine.nom }}</td>
                <td>{{ domaine.description }}</td>
                <td>{{ domaine.image }}</td>
                <td>{{ domaine.arrive ? domaine.arrive|date('H:i:s') : '' }}</td>
                <td>{{ domaine.depart ? domaine.depart|date('H:i:s') : '' }}</td>
                <td>{{ domaine.adresse }}</td>
                <td>{{ domaine.ville }}</td>
                <td>{{ domaine.pays }}</td>
                <td>
                    <a href="{{ path('domaine_show', {'id': domaine.id}) }}">show</a>
                    <a href="{{ path('domaine_edit', {'id': domaine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('domaine_new') }}">Create new</a>
{% endblock %}
