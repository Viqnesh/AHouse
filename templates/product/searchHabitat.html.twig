{% extends 'internaute.html.twig' %}

{% block titre %} Dashboard {% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/responsive.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/ui.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('fonts/fontawesome/css/all.min.css')}}">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
<link rel="stylesheet" href="{{ asset('css/tooplate-style.css') }}" rel="stylesheet" />                                   <!-- Templatemo style -->

<link rel="stylesheet" src="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
{% endblock %}

{% block contenuPrincipal %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
{% include 'headerLogged.html.twig' %}
{% else %}
{% include 'header.html.twig' %}
{% endif %}

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop" >
    <div class="container">

        <nav>
        <ol class="breadcrumb text-white">
            <li class="breadcrumb-item"><a href="#">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Les Habitats</li>
        </ol>  
        </nav>
    </div> <!-- container //  -->
    </section>
    <!-- ========================= SECTION INTRO END// ========================= -->
    
    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content padding-y">
    <div class="container">
    
    {% for habitat in habitats %}
    <article class="card card-product-list">
        <div class="row no-gutters">
            <aside class="col-md-3">
                <a href="#" class="img-wrap">
                    <img src="images/userDefault.svg">
                </a>
            </aside> <!-- col.// -->
            <div class="col-md-6">
                <div class="info-main">
                    <a href="#" class="h5 title" style="font-size: 35px;margin:0;"> {{ habitat.nom }}  </a>
                    <div class="rating-wrap mb-3">
                        <ul class="rating-stars">
                            <small class="text"> <i class="fa fa-map-marker text-muted"></i>   {{ habitat.pays }} {{ habitat.ville }}  </small>
    
                        </ul>
                    </div> <!-- rating-wrap.// -->
                    
                    <p> {{ habitat.description }} </p><br>
                    <h7> <b>Posté par : </b>{{ habitat.proprietaire.login }} </h7>
                </div> <!-- info-main.// -->
            </div> <!-- col.// -->
            <aside class="col-sm-3">
                <div class="info-aside">
                    <div class="price-wrap">
                        <span class="price h5"> {{ habitat.prix }} € </span>	
                    </div> <!-- info-price-detail // -->
                    <div class="price-wrap">
                        <span class="price h10"> Couchages : {{ habitat.nbCouchages }}  </span>	
                    </div> <!-- info-price-detail // -->
                    <div class="price-wrap">
                        <span class="price h10"> Capacité : {{ habitat.capacite }} </span>	
                    </div> <!-- info-price-detail // -->
                    <br>
                    <p>
                        <a href="{{path('product',{id: habitat.id})}}" class="btn btn-lg btn-starred btn-purple"> Voir plus </a>
                        </a>
                    </p>
                </div> <!-- info-aside.// -->
            </aside> <!-- col.// -->
        </div> <!-- row.// -->
    </article> <!-- card-product .// -->
    {% endfor %}
    
        </main> <!-- col.// -->
    
    </div>
    
    </div> <!-- container .//  -->
    </section>


{% endblock %}

{% block javascripts %}
        <script src="{{ asset('js/jquery-2.0.0.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>
{% endblock %}

